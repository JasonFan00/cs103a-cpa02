
<form method="post" action="/notes/add">
    Note Title
      <input type="text" name="title" 
             placeholder="e.g. COSI Notes">
    
    Note Content
        <input type="text" name="content" 
            placeholder="Any notes you want to save!">
    <input type="submit">
</form>
<br>


<h1>Your Notes</h1>
The below are notes belonging to you
<hr>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody></tbody>
    <% for (note of notes) {
         %>
      <tr class="mb-2"> 
        <td><%= note.title %></td>
        <td><%= note.content %></td>
    </tr>
    <% } %>
    </tbody>
</table>